<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
  version="2.4">

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.html</url-pattern>
    <url-pattern>/images/*</url-pattern>
    <url-pattern>/js/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>ru.job4j.todolist.filter.CharsetFilter</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>/items</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>ItemController</servlet-name>
    <servlet-class>ru.job4j.todolist.controller.ItemController</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ItemController</servlet-name>
    <url-pattern>/items</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ItemDeleteController</servlet-name>
    <servlet-class>ru.job4j.todolist.controller.ItemDeleteController</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ItemDeleteController</servlet-name>
    <url-pattern>/items/delete</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ItemDoneController</servlet-name>
    <servlet-class>ru.job4j.todolist.controller.ItemDoneController</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ItemDoneController</servlet-name>
    <url-pattern>/items/done</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ItemAddController</servlet-name>
    <servlet-class>ru.job4j.todolist.controller.ItemAddController</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ItemAddController</servlet-name>
    <url-pattern>/items/add</url-pattern>
  </servlet-mapping>

</web-app>