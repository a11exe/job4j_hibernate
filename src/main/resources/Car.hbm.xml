<hibernate-mapping>

  <class name="ru.job4j.cars.modelxml.CarXml" table="car">
    <id name="id" type="int" column="id">
      <generator class="identity"/>
    </id>

    <many-to-one name = "engine"
      class="ru.job4j.cars.modelxml.EngineXml" lazy="false" >
      <column name="engine_id" />
    </many-to-one>

    <set name="drivers" table="history_owner"
      inverse="false" lazy="true" fetch="select" >
      <key>
        <column name="car_id" not-null="true" />
      </key>
      <many-to-many entity-name="ru.job4j.cars.modelxml.DriverXml">
        <column name="driver_id" not-null="true" />
      </many-to-many>
    </set>

  </class>

</hibernate-mapping>