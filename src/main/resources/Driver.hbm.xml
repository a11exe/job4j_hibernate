<hibernate-mapping>

  <class name="ru.job4j.cars.modelxml.DriverXml" table="driver">
    <id name="id" type="int" column="id" >
      <generator class="identity" />
    </id>
    <property name = "name" column = "name" type = "string"/>

    <set name="cars" table="history_owner"
    inverse="false" lazy="true" fetch="select" >
    <key>
    <column name="driver_id" not-null="true" />
    </key>
    <many-to-many entity-name="ru.job4j.cars.modelxml.CarXml">
    <column name="car_id" not-null="true" />
    </many-to-many>
    </set>

  </class>

</hibernate-mapping>